extends base.pug

block scripts
    script(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact US
        form(action='/contact', method='post', class="myForm")
            input(type="text" , class='myInput', name='name', placeholder='Eneter your name')
            input(type="phone" , class='myInput', name='phone', placeholder='Eneter your phone number')
            input(type="email" , class='myInput', name='email', placeholder='Eneter your email id')
            input(type="text" , class='myInput', name='address', placeholder='Eneter your address')
            input(type="text" , class='myInput', name='desc', placeholder='Eneter your concern')
            button(class='btn')
                | submit